<%- layout("layout/boilerplate.ejs") %>

<div class="min-h-screen flex items-center justify-center bg-[#7C6AE6]">
    <!-- Card -->
    <div class="w-full max-w-md bg-[#DDE6FF] rounded-2xl shadow-xl p-8">
        
        <!-- Logo -->
        <div class="flex items-center justify-center mb-6">
            <div class="flex items-center space-x-2 text-[#6C63FF] font-bold text-xl">
                <span class="rounded-md px-2 py-1">
                    <img src="/logo.png" alt="Logo" class="w-full h-20"/>
                </span>
            </div>
        </div>

        <!-- Heading -->
        <h2 class="text-2xl font-semibold text-center text-gray-800">
            Login to Admin account
        </h2>
        <p class="text-center text-sm text-gray-600 mt-2 mb-6">
            Access to the most powerfull tool in the entire design and web industry.
        </p>

        <!-- Form -->
        <form action="/admin/auth/login" method="POST" class="space-y-4">
            <input
                type="email"
                name="username"
                placeholder="E-mail Address"
                required
                class="w-full px-4 py-3 rounded-lg bg-[#EAF1FF] focus:outline-none focus:ring-2 focus:ring-[#6C63FF]"
            />

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
                class="w-full px-4 py-3 rounded-lg bg-[#EAF1FF] focus:outline-none focus:ring-2 focus:ring-[#6C63FF]"
            />

            <div class="flex items-center justify-between">
                <button
                    type="submit"
                    class="bg-[#6C63FF] text-white px-8 py-2 rounded-lg hover:bg-[#5a52d6] transition">
                    Login
                </button>

                <a href="#" class="text-sm text-gray-600 hover:underline">
                    Forget password?
                </a>
            </div>
        </form>

      
        

        <!-- Register -->
        <div class="mt-6 text-center">
            <a href="/admin/register" class="text-sm text-[#6C63FF] font-medium hover:underline">
                Register new account
            </a>
        </div>
    </div>
</div>
