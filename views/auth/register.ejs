<%- layout("layout/boilerplate.ejs") %>

<div
  class="min-h-screen flex items-center justify-center px-6
  bg-gradient-to-br from-[#2B253A] via-[#3A2F4D] to-[#C5A059]"
>

  <div class="absolute inset-0 bg-[#2B253A]/60 backdrop-blur-[2px]"></div>

  <!-- Card -->
  <div
    class="relative flex w-full max-w-5xl rounded-2xl overflow-hidden
    bg-[#2C2638]/95 border border-[#3F3760]
    shadow-[0_25px_80px_rgba(0,0,0,0.6)]"
  >

    <!-- Left Image Section -->
    <div class="hidden md:block md:w-1/2 relative">
      <img
        src="/login/login_bg.jpg"
        alt="Register"
        class="absolute inset-0 h-full w-full object-cover"
      />

      <div class="absolute inset-0 bg-gradient-to-t from-[#1E1A2B]/90 via-[#2B253A]/70 to-transparent"></div>

      <div class="relative z-10 p-10 text-white flex flex-col justify-end h-full">
        <h2 class="text-3xl font-bold tracking-wide">
          Join the Journey
        </h2>
        <p class="text-gray-300 mt-2">
          Create your secure admin account
        </p>
      </div>
    </div>

    <!-- Right Form Section -->
    <div class="w-full md:w-1/2 p-12 text-white">
      <h2 class="text-3xl font-semibold mb-2">Create Admin Account</h2>

      <p class="text-md text-gray-400 mb-8">
        Already registered?
        <a
          href="/admin/login"
          class="text-[#C5A059] hover:text-[#E0B96A] transition font-medium"
        >
          Login
        </a>
      </p>

      <form action="/admin/auth/register" method="POST" class="space-y-6">

        <!-- Email -->
        <div>
          <label class="block text-sm mb-2 text-gray-400">
            Email Address
          </label>
          <input
            type="email"
            name="username"
            required
            placeholder="admin@example.com"
            class="w-full px-4 py-3 rounded-xl
            bg-[#3A334D]
            border border-[#4A4270]
            text-white
            placeholder-gray-400
            focus:outline-none
            focus:ring-2
            focus:ring-[#C5A059]
            focus:border-transparent
            transition"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm mb-2 text-gray-400">
            Password
          </label>
          <input
            type="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-3 rounded-xl
            bg-[#3A334D]
            border border-[#4A4270]
            text-white
            placeholder-gray-400
            focus:outline-none
            focus:ring-2
            focus:ring-[#C5A059]
            focus:border-transparent
            transition"
          />
        </div>

        <!-- Button -->
        <button
          type="submit"
          class="w-full py-3 rounded-xl
          bg-gradient-to-r from-[#C5A059] to-[#B48A3C]
          hover:from-[#D8B46A] hover:to-[#C59B4F]
          transition-all duration-300
          font-semibold text-white
          shadow-lg shadow-[#C5A059]/30"
        >
          Register
        </button>

      </form>
    </div>

  </div>
</div>
