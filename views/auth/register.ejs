<%- layout("layout/boilerplate.ejs") %>

<div
  class="min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-100 via-purple-100 to-blue-100 px-4"
>
  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8">
    
    <div class="text-center mb-8">
      <img src="/logo.png" alt="Logo" class="ml-15 h-12" />
      <h2 class="text-3xl font-bold text-gray-800">Admin Registration</h2>
      <p class="text-gray-500 text-sm mt-1">Create a new admin account</p>
    </div>

    <form action="/admin/auth/register" method="POST" class="space-y-5">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Email Address
        </label>
        <input
          type="email"
          name="username"
          placeholder="admin@example.com"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-pink-400 transition"
        />
      </div>


      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Password
        </label>
        <input
          type="password"
          name="password"
          placeholder="••••••••"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-pink-400 transition"
        />
      </div>

      <button
        type="submit"
        class="w-full bg-gradient-to-r from-pink-500 to-purple-500 text-white py-2.5 rounded-lg font-semibold hover:opacity-90 transition duration-200 shadow-md"
      >
        Register Admin
      </button>
    </form>

    <p class="text-center text-sm text-gray-500 mt-6">
      Already have an account?
      <a href="/admin/login" class="text-pink-500 font-medium hover:underline">
        Login
      </a>
    </p>
  </div>
</div>
