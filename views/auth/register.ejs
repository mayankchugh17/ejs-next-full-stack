<%- layout("layout/boilerplate.ejs") %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-[#6E5AE6] via-[#5A4FCF] to-[#3A2E5C] px-6">
  
  <!-- Card -->
  <div class="flex w-full max-w-4xl rounded-2xl overflow-hidden shadow-2xl bg-[#2F2A3D]">

    <!-- Left Image Section -->
    <div class="hidden md:block md:w-1/2 relative">
      <img
        src="/login/login_bg.jpg"
        alt="Register"
        class="h-full w-full  object-cover"
      />
      <div class="absolute bottom-6 left-6 text-white">
        <h2 class="text-2xl font-bold">Join the Journey</h2>
        <p class="text-sm opacity-80">Create your admin account</p>
      </div>
    </div>

    <!-- Right Form Section -->
    <div class="pt-40 w-full md:w-1/2 p-10 text-white">
      <h2 class="text-3xl font-semibold mb-2">Create admin account</h2>
      <p class="text-sm text-gray-300 mb-8">
        Already registered?
        <a href="/admin/login" class="text-purple-400 hover:underline">
          Login
        </a>
      </p>

      <form action="/admin/auth/register" method="POST" class="space-y-6">

        <!-- Email -->
        <div>
          <label class="block text-sm mb-1 text-gray-300">
            Email address
          </label>
          <input
            type="email"
            name="username"
            required
            placeholder="admin@example.com"
            class="w-full px-4 py-3 rounded-lg bg-[#3A3550] border border-[#4B4566] focus:outline-none focus:ring-2 focus:ring-purple-500"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm mb-1 text-gray-300">
            Password
          </label>
          <input
            type="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-3 rounded-lg bg-[#3A3550] border border-[#4B4566] focus:outline-none focus:ring-2 focus:ring-purple-500"
          />
        </div>

        <!-- Button -->
        <button
          type="submit"
          class="w-full py-3 rounded-lg bg-purple-500 hover:bg-purple-600 transition font-semibold shadow-lg"
        >
          Register
        </button>
      </form>
    </div>

  </div>
</div>
