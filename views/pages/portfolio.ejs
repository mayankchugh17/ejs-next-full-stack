<%- layout("layout/boilerplate.ejs") %>
<%- include("../includes/navbar.ejs") %>

<div class="fixed top-6 right-6 z-50 space-y-4 min-w-[320px] pointer-events-none">
  <% if (success && success.length > 0) { %>
    <div class="pointer-events-auto flex items-center p-4 text-emerald-100 bg-emerald-500/20 border border-emerald-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
      <div class="flex-shrink-0 bg-emerald-500 text-white p-2 rounded-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
      </div>
      <div class="ml-3 font-medium"><%= success[0] %></div>
      <button onclick="this.parentElement.remove()" class="ml-auto text-emerald-100/50 hover:text-emerald-100 transition-colors pointer-events-auto">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
      </button>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="pointer-events-auto flex items-center p-4 text-rose-100 bg-rose-500/20 border border-rose-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
      <div class="flex-shrink-0 bg-rose-500 text-white p-2 rounded-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </div>
      <div class="ml-3 font-medium"><%= error[0] %></div>
      <button onclick="this.parentElement.remove()" class="ml-auto text-rose-100/50 hover:text-rose-100 transition-colors pointer-events-auto">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
      </button>
    </div>
  <% } %>
</div>

<section class="min-h-screen bg-slate-900">
  <div class="flex">
    <%- include("../particals/sidebar.ejs") %>

    <div class="flex-1 p-6 lg:p-12">
      <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        
        <div class="lg:sticky lg:top-12 space-y-6">
          <header class="space-y-2">
            <h2 class="text-3xl font-extrabold text-white">Portfolio Preview</h2>
            <p class="text-slate-400">Visualize how your projects appear to visitors.</p>
          </header>

          <div class="bg-white rounded-2xl overflow-hidden shadow-2xl border-4 border-slate-800">
            <div class="p-8 bg-slate-50 border-b border-slate-100">
              <h3 class="text-2xl font-bold text-slate-900 mb-1"><%= data.heading %></h3>
              <p class="text-blue-600 font-medium text-sm underline decoration-2 underline-offset-4"><%= data.subHeading %></p>
            </div>

            <div class="p-8">
              <div class="group relative overflow-hidden rounded-xl bg-slate-200 aspect-video mb-4">
                <img src="https://i.pinimg.com/736x/81/f9/84/81f984726f8a9bf98b8e6b79ef442b61.jpg" alt="Card preview" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-6">
                   <span class="text-white text-xs font-bold uppercase tracking-widest bg-blue-600 px-2 py-1 rounded">Featured Work</span>
                </div>
              </div>
              <h4 class="text-xl font-bold text-slate-800"><%= data.cards[0].cardHeading %></h4>
              <p class="text-slate-500 mt-2 leading-relaxed"><%= data.cards[0].description %></p>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-3xl p-1 border border-slate-700 shadow-2xl">
          <form method="post" action="/portfolio" class="bg-slate-900 rounded-[calc(1.5rem-1px)] p-8 lg:p-10 space-y-8 text-white">
            <div class="border-b border-slate-800 pb-6">
              <h3 class="text-2xl font-bold">Project Details</h3>
              <p class="text-slate-400 text-sm mt-1">Update the main portfolio section and the first featured card.</p>
            </div>

            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Main Heading</label>
                  <input type="text" name="heading" value="<%= data.heading %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Sub-Heading</label>
                  <input type="text" name="subHeading" value="<%= data.subHeading %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>
              </div>

              <div class="pt-6 border-t border-slate-800 space-y-6">
                <h4 class="text-blue-400 text-sm font-bold uppercase tracking-widest">Featured Card Settings</h4>
                
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Image URL</label>
                  <input type="text" name="cardSrc" value="<%= data.cards[0].src %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all" placeholder="https://images.unsplash.com/...">
                </div>

                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Card Title</label>
                  <input type="text" name="cardHeading" value="<%= data.cards[0].cardHeading %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>

                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Card Description</label>
                  <textarea name="description" rows="3" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none resize-none transition-all"><%= data.cards[0].description %></textarea>
                </div>
              </div>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl transition-all duration-300 shadow-lg flex items-center justify-center gap-2 transform active:scale-[0.98]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
              Update Portfolio Card
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slideIn {
    from { transform: translateX(100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  .animate-slide-in {
    animation: slideIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>