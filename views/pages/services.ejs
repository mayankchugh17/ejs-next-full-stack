<%- layout("layout/boilerplate.ejs") %>
<%- include("../includes/navbar.ejs") %>

<div class="fixed top-6 right-6 z-50 space-y-4 min-w-[320px] pointer-events-none">
  <% if (success && success.length > 0) { %>
    <div class="pointer-events-auto flex items-center p-4 text-emerald-100 bg-emerald-500/20 border border-emerald-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
      <div class="flex-shrink-0 bg-emerald-500 text-white p-2 rounded-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
      </div>
      <div class="ml-3 font-medium"><%= success[0] %></div>
      <button onclick="this.parentElement.remove()" class="ml-auto text-emerald-100/50 hover:text-emerald-100 transition-colors pointer-events-auto">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
      </button>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="pointer-events-auto flex items-center p-4 text-rose-100 bg-rose-500/20 border border-rose-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
      <div class="flex-shrink-0 bg-rose-500 text-white p-2 rounded-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </div>
      <div class="ml-3 font-medium"><%= error[0] %></div>
      <button onclick="this.parentElement.remove()" class="ml-auto text-rose-100/50 hover:text-rose-100 transition-colors pointer-events-auto">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
      </button>
    </div>
  <% } %>
</div>

<section class="min-h-screen bg-slate-900 font-sans">
  <div class="flex">
    <%- include("../particals/sidebar.ejs") %>

    <div class="flex-1 p-6 lg:p-12">
      <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        
        <div class="lg:sticky lg:top-12 space-y-6">
          <header class="space-y-2">
            <h2 class="text-3xl font-extrabold text-white tracking-tight">Services Preview</h2>
            <p class="text-slate-400">View how your expertise is presented to users.</p>
          </header>

          <div class="w-full bg-white rounded-2xl overflow-hidden shadow-2xl border-4 border-slate-800">
            <div class="bg-slate-800 p-3 flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>

            <div class="p-8 lg:p-10 space-y-8 bg-white min-h-[500px]">
              <div class="space-y-2">
                <span class="text-blue-600 font-bold text-sm uppercase tracking-widest"><%= serviceData.title || 'Our Services' %></span>
                <h1 class="text-4xl font-black text-slate-900"><%= serviceData.heading || 'Solutions for you' %></h1>
                <p class="text-slate-500"><%= serviceData.description || 'Professional services tailored to your needs.' %></p>
              </div>

              <div class="grid grid-cols-1 gap-3 border-y py-6 border-slate-100">
                <% if(serviceData.list && serviceData.list.length > 0) { %>
                  <% serviceData.list.forEach(item => { %>
                    <div class="flex items-center gap-3 text-slate-700">
                      <div class="bg-blue-100 text-blue-600 p-1 rounded-full">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>
                      </div>
                      <span class="font-medium"><%= item %></span>
                    </div>
                  <% }) %>
                <% } %>
              </div>

              <div class="pt-2">
                <h4 class="text-lg font-bold text-slate-800"><%= serviceData.subTitle || 'Why Choose Us?' %></h4>
                <p class="text-slate-500 text-sm italic"><%= serviceData.subDescription || 'Dedicated support and expert execution.' %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-3xl p-1 border border-slate-700 shadow-2xl">
          <form method="post" action="/services" class="bg-slate-900 rounded-[calc(1.5rem-1px)] p-8 lg:p-10 space-y-8 text-white">
            <div class="border-b border-slate-800 pb-6">
              <h3 class="text-2xl font-bold">Services Details</h3>
              <p class="text-slate-400 text-sm mt-1">Refine your service offerings and descriptions.</p>
            </div>

            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2 group-focus-within:text-blue-400">Section Title</label>
                  <input type="text" name="title" value="<%= serviceData.title %>"
                    class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2 group-focus-within:text-blue-400">Main Heading</label>
                  <input type="text" name="heading" value="<%= serviceData.heading %>"
                    class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>
              </div>

              <div class="group">
                <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2 group-focus-within:text-blue-400">Service Description</label>
                <textarea name="description" rows="2"
                  class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none resize-none transition-all"><%= serviceData.description %></textarea>
              </div>

              <div class="group bg-blue-500/5 p-4 rounded-2xl border border-blue-500/10">
                <label class="block text-blue-400 text-xs uppercase tracking-widest font-bold mb-2">List of Services (Comma Separated)</label>
                <input type="text" name="list" value="<%= serviceData.list.join(', ') %>"
                  class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all"
                  placeholder="UI Design, Web Dev, Marketing...">
                <p class="text-slate-500 text-[10px] mt-2 italic">Separating by commas creates individual list items in the preview.</p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-4 border-t border-slate-800">
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Sub-Title</label>
                  <input type="text" name="subTitle" value="<%= serviceData.subTitle %>"
                    class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>
                <div class="group">
                  <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2">Sub-Description</label>
                  <input type="text" name="subDescription" value="<%= serviceData.subDescription %>"
                    class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
                </div>
              </div>
            </div>

            <div class="pt-4">
              <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl transition-all duration-300 shadow-lg shadow-blue-500/20 flex items-center justify-center gap-2 transform active:scale-[0.98]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path></svg>
                Publish Service Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slideIn {
    from { transform: translateX(100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  .animate-slide-in {
    animation: slideIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>