<%- layout("layout/boilerplate.ejs") %>

<% 
  // Safety check: ensures 'data' exists so the page doesn't crash if the route fails
  if (typeof data === 'undefined' || !data) { var data = {}; } 
%>

<style>
  @keyframes slideIn {
    from { transform: translateX(100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  
  .animate-slide-in {
    animation: slideIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>

<section class="min-h-screen bg-slate-900">
  <%- include("../includes/navbar.ejs") %>
  
  <div class="flex">
    <%- include("../particals/sidebar.ejs") %>

    <div class="flex-1 p-6 lg:p-12 relative">
      
      <div class="fixed top-6 right-6 z-50 space-y-4 min-w-[320px] pointer-events-none">
        <% if (success && success.length > 0) { %>
          <div class="pointer-events-auto flex items-center p-4 text-emerald-100 bg-emerald-500/20 border border-emerald-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
            <div class="flex-shrink-0 bg-emerald-500 text-white p-2 rounded-xl">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <div class="ml-3 font-medium"><%= success[0] %></div>
          </div>
        <% } %>
      </div>

      <div class="max-w-4xl mx-auto space-y-10">
        
        <div class="space-y-6">
          <div class="space-y-2">
            <h2 class="text-3xl font-extrabold text-white tracking-tight">Newspaper Section Preview</h2>
            <p class="text-slate-400">This is how your subscription banner will look to users.</p>
          </div>

          <div class="bg-indigo-600 rounded-3xl p-8 lg:p-12 text-center space-y-6 shadow-2xl shadow-indigo-500/20 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
              <svg width="100%" height="100%"><rect width="100%" height="100%" fill="url(#grid-pattern)" /></svg>
              <defs><pattern id="grid-pattern" width="40" height="40" patternUnits="userSpaceOnUse"><path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/></pattern></defs>
            </div>

            <h1 class="text-3xl lg:text-5xl font-black text-white leading-tight relative z-10" id="prev-heading">
              <%= data.heading || 'Stay Updated with Our Daily News' %>
            </h1>
            <p class="text-indigo-100 text-lg max-w-2xl mx-auto relative z-10" id="prev-desc">
              <%= data.description || 'Get the latest headlines and breaking news delivered straight to your inbox every morning.' %>
            </p>
            <div class="pt-4 relative z-10">
              <button class="bg-white text-indigo-600 px-8 py-4 rounded-full font-bold shadow-xl hover:scale-105 transition-transform" id="prev-btn">
                <%= data.buttonText || 'Subscribe Now' %>
              </button>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-3xl p-1 border border-slate-700 shadow-2xl">
          <form method="post" action="/newspaper" class="bg-slate-900 rounded-[calc(1.5rem-1px)] p-8 lg:p-10 space-y-8">
            <div class="border-b border-slate-800 pb-6">
              <h3 class="text-2xl font-bold text-white">Content Settings</h3>
              <p class="text-slate-400 text-sm mt-1">Update the newspaper heading, description, and button text.</p>
            </div>

            <div class="space-y-6">
              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-indigo-400">Main Heading</label>
                <input type="text" name="heading" 
                       oninput="document.getElementById('prev-heading').innerText = this.value"
                       value="<%= data.heading || '' %>" 
                       placeholder="e.g., The Daily Chronicle"
                       class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all" required>
              </div>

              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-indigo-400">Description</label>
                <textarea name="description" 
                          oninput="document.getElementById('prev-desc').innerText = this.value"
                          rows="4" 
                          class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none resize-none transition-all"
                          placeholder="Tell your readers why they should subscribe..."><%= data.description || '' %></textarea>
              </div>

              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-indigo-400">Button Label</label>
                <div class="relative">
                  <input type="text" name="buttonText" 
                         oninput="document.getElementById('prev-btn').innerText = this.value"
                         value="<%= data.buttonText || 'Subscribe Now' %>" 
                         class="w-full bg-slate-800 text-white p-4 pl-12 border border-slate-700 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
                  <svg class="w-5 h-5 text-slate-500 absolute left-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path></svg>
                </div>
              </div>
            </div>

            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-4 rounded-xl transition-all duration-300 shadow-lg shadow-indigo-500/20 flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
              Publish Newspaper Updates
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>