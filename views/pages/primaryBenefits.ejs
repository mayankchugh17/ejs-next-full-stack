<%- layout("layout/boilerplate.ejs") %>

<style>
  @keyframes slideIn {
    from { transform: translateX(100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  
  .animate-slide-in {
    animation: slideIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>

<section class="min-h-screen bg-slate-900">
  <%- include("../includes/navbar.ejs") %>
  
  <div class="flex">
    <%- include("../particals/sidebar.ejs") %>

    <div class="flex-1 p-6 lg:p-12 relative">
      
      <div class="fixed top-6 right-6 z-50 space-y-4 min-w-[320px] pointer-events-none">
        <% if (success && success.length > 0) { %>
          <div class="pointer-events-auto flex items-center p-4 text-emerald-100 bg-emerald-500/20 border border-emerald-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
            <div class="flex-shrink-0 bg-emerald-500 text-white p-2 rounded-xl">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <div class="ml-3 font-medium"><%= success[0] %></div>
            <button onclick="this.parentElement.remove()" class="ml-auto text-emerald-100/50 hover:text-emerald-100 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
            </button>
          </div>
        <% } %>

        <% if (error && error.length > 0) { %>
          <div class="pointer-events-auto flex items-center p-4 text-rose-100 bg-rose-500/20 border border-rose-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
            <div class="flex-shrink-0 bg-rose-500 text-white p-2 rounded-xl">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <div class="ml-3 font-medium"><%= error[0] %></div>
            <button onclick="this.parentElement.remove()" class="ml-auto text-rose-100/50 hover:text-rose-100 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
            </button>
          </div>
        <% } %>
      </div>

      <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        
        <div class="lg:sticky lg:top-12 space-y-6">
          <div class="space-y-2">
            <h2 class="text-3xl font-extrabold text-white tracking-tight">Live Preview</h2>
            <p class="text-slate-400">Instantly visualize your landing page updates.</p>
          </div>

          <div class="w-full bg-white rounded-2xl overflow-hidden shadow-2xl border-4 border-slate-800">
            <div class="bg-slate-800 p-3 flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>

            <div class="p-10 space-y-6 bg-gradient-to-br from-blue-50 to-white min-h-[400px] flex flex-col justify-center">
              <span class="text-blue-600 font-bold tracking-widest uppercase text-sm" id="preview-title">
                <%= data.heroTitle || 'NEW ARRIVAL' %>
              </span>
              <h1 class="text-4xl font-black text-slate-900 leading-tight" id="preview-heading">
                <%= data.heroHeading || 'Your Headline' %>
              </h1>
              <p class="text-slate-600 text-lg max-w-md" id="preview-subheading">
                <%= data.heroHeading2 || 'Describe your amazing service here.' %>
              </p>
              <div class="flex gap-4 pt-4">
                <button class="bg-blue-600 text-white px-6 py-3 rounded-full font-bold shadow-lg" id="preview-btn1">
                  <%= data.button1 || 'Start' %>
                </button>
                <button class="border-2 border-slate-200 text-slate-700 px-6 py-3 rounded-full font-bold" id="preview-btn2">
                  <%= data.button2 || 'More' %>
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-3xl p-1 border border-slate-700 shadow-2xl">
          <form method="post" action="/dashboard/hero" id="hero-form" class="bg-slate-900 rounded-[calc(1.5rem-1px)] p-8 lg:p-10 space-y-8">
            <div class="border-b border-slate-800 pb-6">
              <h3 class="text-2xl font-bold text-white">Hero Content Editor</h3>
              <p class="text-slate-400 text-sm mt-1">Control the first impression of your website.</p>
            </div>

            <div class="space-y-6">
              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-blue-400">Intro Tagline</label>
                <input type="text" name="heroTitle" data-preview="preview-title" value="<%= data.heroTitle %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
              </div>

              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-blue-400">Main Headline</label>
                <input type="text" name="heroHeading" data-preview="preview-heading" value="<%= data.heroHeading %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
              </div>

              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-blue-400">Supporting Sub-headline</label>
                <textarea name="heroHeading2" data-preview="preview-subheading" rows="4" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none resize-none transition-all"><%= data.heroHeading2 %></textarea>
              </div>

              <div class="grid grid-cols-2 gap-6">
                <div class="group">
                  <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-blue-400">Primary Button</label>
                  <input type="text" name="button1" data-preview="preview-btn1" value="<%= data.button1 %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div class="group">
                  <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-blue-400">Secondary Button</label>
                  <input type="text" name="button2" data-preview="preview-btn2" value="<%= data.button2 %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
              </div>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl transition-all duration-300 shadow-lg shadow-blue-500/20 flex items-center justify-center gap-2 transform active:scale-[0.98]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              Publish Hero Changes
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

