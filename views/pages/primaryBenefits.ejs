<%- layout("layout/boilerplate.ejs") %>

<style>
  @keyframes slideIn {
    from { transform: translateX(100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  .animate-slide-in {
    animation: slideIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>

<section class="min-h-screen bg-slate-900">
  <%- include("../includes/navbar.ejs") %>
  
  <div class="flex">
    <%- include("../particals/sidebar.ejs") %>

    <div class="flex-1 p-6 lg:p-12 relative">
      
      <div class="fixed top-6 right-6 z-50 space-y-4 min-w-[320px] pointer-events-none">
        <% if (success && success.length > 0) { %>
          <div class="pointer-events-auto flex items-center p-4 text-emerald-100 bg-emerald-500/20 border border-emerald-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
            <div class="flex-shrink-0 bg-emerald-500 text-white p-2 rounded-xl">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <div class="ml-3 font-medium"><%= success[0] %></div>
            <button onclick="this.parentElement.remove()" class="ml-auto text-emerald-100/50 hover:text-emerald-100 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
            </button>
          </div>
        <% } %>
      </div>

      <div class="max-w-7xl mx-auto grid grid-cols-1 xl:grid-cols-2 gap-12 items-start">
        
        <div class="lg:sticky lg:top-12 space-y-6">
          <div class="space-y-2">
            <h2 class="text-3xl font-extrabold text-white tracking-tight">Benefits Preview</h2>
            <p class="text-slate-400">Visualization of your value proposition cards.</p>
          </div>

          <div class="w-full bg-slate-50 rounded-2xl overflow-hidden shadow-2xl border-4 border-slate-800 p-6">
             <div class="bg-slate-800 -m-6 mb-6 p-3 flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>

            <h3 class="text-2xl font-black text-slate-900 text-center mb-8 pt-4" id="preview-main-heading">
                <%= (data && data.heading) || 'Our Core Benefits' %>
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <% [1, 2, 3].forEach(i => { %>
                <% const card = (data && data['card' + i]) ? data['card' + i] : {}; %>
                <div class="bg-white p-4 rounded-xl border border-slate-200 shadow-sm">
                  <div class="w-8 h-8 bg-blue-600 text-white rounded-lg flex items-center justify-center mb-3 font-bold text-xs">
                    0<%= i %>
                  </div>
                  <h4 class="text-sm font-bold text-slate-800 mb-2" id="preview-card<%= i %>-h">
                    <%= card.heading || 'Benefit Title' %>
                  </h4>
                  <p class="text-slate-500 text-[11px] leading-relaxed" id="preview-card<%= i %>-d">
                    <%= card.description || 'Brief description of this benefit.' %>
                  </p>
                </div>
              <% }) %>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-3xl p-1 border border-slate-700 shadow-2xl">
          <form method="post" action="/primaryBenefits" id="benefits-form" class="bg-slate-900 rounded-[calc(1.5rem-1px)] p-8 lg:p-10 space-y-8">
            <div class="border-b border-slate-800 pb-6">
              <h3 class="text-2xl font-bold text-white">Benefits Editor</h3>
              <p class="text-slate-400 text-sm mt-1">Update headings and card details below.</p>
            </div>

            <div class="space-y-8">
              <div class="group">
                <label class="block text-slate-300 font-semibold mb-2 group-focus-within:text-blue-400 transition-colors">Section Main Heading</label>
                <input type="text" name="heading" data-preview="preview-main-heading" value="<%= (data && data.heading) || '' %>" class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all">
              </div>

              <div class="space-y-6">
                <% [1, 2, 3].forEach(i => { %>
                  <% const card = (data && data['card' + i]) ? data['card' + i] : {}; %>
                  <div class="p-6 bg-slate-800/40 rounded-2xl border border-slate-700/50 space-y-4">
                    <div class="flex items-center gap-2 mb-2">
                        <div class="w-2 h-6 bg-blue-500 rounded-full"></div>
                        <h4 class="text-white font-bold uppercase tracking-wider text-sm">Benefit Card 0<%= i %></h4>
                    </div>

                    <div class="group">
                        <label class="block text-slate-500 text-xs font-bold mb-1 uppercase">Title</label>
                        <input type="text" 
                               name="card<%= i %>[heading]" 
                               data-preview="preview-card<%= i %>-h" 
                               value="<%= card.heading || '' %>" 
                               class="w-full bg-slate-800 text-white p-3 border border-slate-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition-all text-sm">
                    </div>

                    <div class="group">
                        <label class="block text-slate-500 text-xs font-bold mb-1 uppercase">Description</label>
                        <textarea name="card<%= i %>[description]" 
                                  data-preview="preview-card<%= i %>-d" 
                                  rows="3" 
                                  class="w-full bg-slate-800 text-white p-3 border border-slate-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none resize-none transition-all text-sm leading-relaxed"><%= card.description || '' %></textarea>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl transition-all duration-300 shadow-lg shadow-blue-500/20 flex items-center justify-center gap-2 transform active:scale-[0.98]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path></svg>
              Save Benefits Section
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

