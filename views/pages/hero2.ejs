<%- layout("layout/boilerplate.ejs") %>
<%- include("../includes/navbar.ejs") %>

<div class="fixed top-6 right-6 z-50 space-y-4 min-w-[320px] pointer-events-none">
  <% if (success && success.length > 0) { %>
    <div class="pointer-events-auto flex items-center p-4 text-emerald-100 bg-emerald-500/20 border border-emerald-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
      <div class="flex-shrink-0 bg-emerald-500 text-white p-2 rounded-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
      </div>
      <div class="ml-3 font-medium"><%= success[0] %></div>
      <button onclick="this.parentElement.remove()" class="ml-auto text-emerald-100/50 hover:text-emerald-100 transition-colors pointer-events-auto">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
      </button>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="pointer-events-auto flex items-center p-4 text-rose-100 bg-rose-500/20 border border-rose-500/30 backdrop-blur-md rounded-2xl shadow-2xl animate-slide-in">
      <div class="flex-shrink-0 bg-rose-500 text-white p-2 rounded-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </div>
      <div class="ml-3 font-medium"><%= error[0] %></div>
      <button onclick="this.parentElement.remove()" class="ml-auto text-rose-100/50 hover:text-rose-100 transition-colors pointer-events-auto">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path></svg>
      </button>
    </div>
  <% } %>
</div>

<section class="min-h-screen bg-slate-900 font-sans">
  <div class="flex">
    <%- include("../particals/sidebar.ejs") %>

    <div class="flex-1 p-6 lg:p-12">
      <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center min-h-[80vh]">
        
        <div class="space-y-6">
          <header class="space-y-2">
            <h2 class="text-3xl font-extrabold text-white">Hero 2 Preview</h2>
            <p class="text-slate-400 font-medium">Secondary Call-to-Action section.</p>
          </header>

          <div class="w-full bg-slate-800 rounded-3xl overflow-hidden shadow-2xl border border-slate-700">
            <div class="bg-slate-700/50 p-4 flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>

            </div>

            <div class="p-12 text-center space-y-8 bg-gradient-to-b from-slate-800 to-slate-900">
              <h2 class="text-4xl font-black text-white leading-tight">
                <%= data.heading || 'Ready to start your next big project?' %>
              </h2>
              
              <div class="flex justify-center">
                <button class="bg-blue-600 hover:bg-blue-500 text-white px-10 py-4 rounded-2xl font-bold text-lg shadow-xl shadow-blue-500/20 transition-all border-b-4 border-blue-800 active:border-b-0 active:translate-y-1">
                  <%= data.buttonText || 'Get Started' %>
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-3xl p-1 border border-slate-700 shadow-2xl">
          <form method="post" action="/hero2" class="bg-slate-900 rounded-[calc(1.5rem-1px)] p-8 lg:p-10 space-y-8 text-white">
            <div class="border-b border-slate-800 pb-6">
              <h3 class="text-2xl font-bold">Edit Content</h3>
              <p class="text-slate-400 text-sm mt-1">This section usually appears near the footer.</p>
            </div>

            <div class="space-y-6">
              <div class="group">
                <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2 group-focus-within:text-blue-400 transition-colors">Hero Heading</label>
                <textarea name="heading" rows="3" 
                  class="w-full bg-slate-800 text-white p-4 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none resize-none transition-all"
                  placeholder="Enter a powerful headline..."><%= data.heading %></textarea>
              </div>

              <div class="group">
                <label class="block text-slate-400 text-xs uppercase tracking-widest font-bold mb-2 group-focus-within:text-blue-400 transition-colors">Button Label</label>
                <div class="relative">
                  <input type="text" name="buttonText" value="<%= data.buttonText %>" 
                    class="w-full bg-slate-800 text-white p-4 pl-12 border border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all"
                    placeholder="e.g. Contact Us">
                  <svg class="w-5 h-5 text-slate-500 absolute left-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path></svg>
                </div>
              </div>
            </div>

            <div class="pt-4">
              <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl transition-all duration-300 shadow-lg shadow-blue-500/20 flex items-center justify-center gap-2 transform active:scale-[0.98]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path></svg>
                Update Hero2 Section
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slideIn {
    from { transform: translateX(100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  .animate-slide-in {
    animation: slideIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>