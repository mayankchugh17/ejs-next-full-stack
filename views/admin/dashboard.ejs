<%- layout("layout/boilerplate.ejs") %>
<style>
body {
  margin: 0;
  background: #111827;
  color: white;
  font-family: Arial;
}

/* Navbar fixed */
.navbar {
  height: 60px;
  background: #1f2937;
  display: flex;
  align-items: center;
  padding: 0 20px;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1000;
}

/* Layout wrapper */
.layout {
  display: flex;
  margin-top: 60px; /* height of navbar */
}

/* Sidebar */
.sidebar {
  width: 240px;
  height: calc(100vh - 60px);
  background: #1f2937;
  position: fixed;
  left: 0;
  top: 60px;
  padding: 20px;
}

/* Main content */
.main-content {
  margin-left: 240px;
  width: calc(100% - 240px);
  padding: 30px;
}

/* Cards */
.cards {
  display: flex;
  gap: 20px;
  margin-bottom: 30px;
}

.card {
  background: #1f2937;
  padding: 20px;
  flex: 1;
  border-radius: 10px;
}

/* Chart */
.chart-box {
  background: #1f2937;
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 30px;
}

/* Table */
.table-box {
  background: #1f2937;
  padding: 20px;
  border-radius: 10px;
}

table {
  width: 100%;
  border-collapse: collapse;
}

th, td {
  padding: 12px;
}

th {
  background: #374151;
}

.success {
  background: green;
  padding: 5px 10px;
  border-radius: 5px;
}

.pending {
  background: orange;
  padding: 5px 10px;
  border-radius: 5px;
}

/* Footer */
.footer {
  margin-top: 40px;
  padding: 20px;
  text-align: center;
  background: #1f2937;
}
</style>
<body>

<%- include("../includes/navbar.ejs") %>

<div class="layout">

  <!-- Sidebar -->
  <div class="sidebar">
    <%- include("../particals/sidebar.ejs") %>
  </div>

  <!-- Main Content -->
  <div class="main-content">

    <div class="container">

      <!-- TOP CARDS -->
      <div class="cards">
        <div class="card">
          <h3>Today Booking</h3>
          <h1><%= todayBookings %></h1>
        </div>

        <div class="card">
          <h3>Total Booking</h3>
          <h1><%= totalBookings %></h1>
        </div>

        <div class="card">
          <h3>Total Customer</h3>
          <h1><%= totalCustomers %></h1>
        </div>

        <div class="card">
          <h3>Total Revenue</h3>
          <h1>$<%= totalRevenue %></h1>
        </div>
      </div>

      <!-- CHART -->
      <div class="chart-box">
        <canvas id="reservationChart"></canvas>
      </div>

      <!-- TABLE -->
      <div class="table-box">
        <h2>Today Booking List</h2>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Room Type</th>
              <th>Check In</th>
              <th>Check Out</th>
              <th>Paid</th>
              <th>Due</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% bookingsList.forEach(b => { %>
              <tr>
                <td><%= b.name %></td>
                <td><%= b.roomType %></td>
                <td><%= b.checkIn.toDateString() %></td>
                <td><%= b.checkOut.toDateString() %></td>
                <td>$<%= b.paidAmount %></td>
                <td>$<%= b.dueAmount %></td>
                <td>
                  <span class="<%= b.status === 'Success' ? 'success' : 'pending' %>">
                    <%= b.status %>
                  </span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

      </div>

    </div>

    <!-- Footer -->
    <%- include("../includes/footer.ejs") %>

  </div>

</div>